<header>
  <div class='container'>
    <h1>Зарегистрироваться в системе</h1>
    <p class='lead'>Уже есть аккаунт? <%= link_to "Войти в систему", new_user_session_path %></p>
  </div>
</header>
<div class="container">
  <div class='row'>
    <div class='span7 offset3'>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { multipart: true, class: "form-horizontal well well-elderflower"}) do |f| %>
        <%= devise_error_messages! %>
        <%= content_tag :fieldset do %>
          <legend>Информация</legend>
          <div class='control-group'>
            <%= f.label :name, 'Имя', class: 'control-label' %>
            <div class='controls'>
              <%= f.text_field :name, placeholder: "Ваше имя", autofocus: true %>
            </div>
          </div>
          <div class='control-group'>
            <%= f.label :email, class: 'control-label' %>
            <div class='controls'>
              <%= f.email_field :email, placeholder: "E-mail" %>
            </div>
          </div>
          <div class='control-group'>
            <%= f.label :avatar, 'Аватар', class: 'control-label' %>
            <div class='controls'>
              <%= image_tag("http://placehold.it/140x140", class: 'img-polaroid') %>
              <p><%= f.file_field :avatar %></p>
            </div>
          </div>
          <div class='control-group'>
            <%= f.label :password, 'Пароль', class: 'control-label' %>
            <div class='controls'>
              <%= f.password_field :password, placeholder: "Пароль" %>
            </div>
          </div>
          <div class='control-group'>
            <%= f.label :password_confirmation, 'Подтверждение пароля' ,class: 'control-label' %>
            <div class='controls'>
              <%= f.password_field :password_confirmation, placeholder: "Подтверждение пароля" %>
            </div>
          </div>
        <% end %>
        <div class='form-actions'>
          <%= f.hidden_field :type, value: "Member" %>
          <%= f.submit "Зарегистрироваться", class: 'btn btn-success span3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
