<%= form_for @guest, as: :guest, url: guest_path(@guest), html: { class: 'form-horizontal well well-elderflower' } do |f| %>
  <%= content_tag :fieldset do %>
    <legend>Удобный доступ</legend>
    <div class='control-group'>
      <%= f.label :password, 'Пароль', class: 'control-label' %>
      <div class='controls'>
        <%= f.password_field :password, placeholder: "Пароль" %>
        <span class="help-inline"><small>минимум 6 символов</small></span>
      </div>
    </div>
    <div class='control-group'>
      <%= f.label :password_confirmation, 'Повторите', class: 'control-label' %>
      <div class='controls'>
        <%= f.password_field :password_confirmation, placeholder: "Подтвердите пароль" %>
      </div>
    </div>
  <% end %>
  <div class='form-actions'>
    <%= f.submit 'Создать аккаунт', class: 'btn btn-success' %>
  </div>
<% end %>
