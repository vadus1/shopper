<%= form_for(User.new, as: :user, url: registration_path(:user), html: { class: "form-horizontal well well-elderflower"}) do |f| %>
  <%= content_tag :fieldset do %>
    <legend>Новый покупатель <small>&mdash; Регистрация бесплатна.</small></legend>
    <div class='control-group'>
      <%= f.label :email, class: 'control-label' %>
      <div class='controls'>
        <%= f.email_field :email, placeholder: "Email", autofocus: true %>
      </div>
    </div>
    <div class='control-group'>
      <%= f.label :password, 'Пароль', class: 'control-label' %>
      <div class='controls'>
        <%= f.password_field :password, placeholder: "Пароль" %>
      </div>
    </div>
    <div class='control-group'>
      <%= f.label :password_confirmation, 'Повторите' ,class: 'control-label' %>
      <div class='controls'>
        <%= f.password_field :password_confirmation, placeholder: "Подтверждение Пароля" %>
      </div>
    </div>
  <% end %>
  <div class='form-actions'>
    <%= f.hidden_field :type, value: "Member" %>
    <%= f.submit "Зарегистрироваться", class: 'btn btn-success span3' %>
  </div>
<% end %>